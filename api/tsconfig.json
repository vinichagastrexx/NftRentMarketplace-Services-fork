{
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],                
  },
  "exclude": [
    "node_modules"
  ],
}
